<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:background="#D4E4DD"
        android:gravity="center|right"
        android:padding="5dp"
        android:textColor="#0000ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="AC"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="^"
            android:textColor="#FBFBFB"
            android:textSize="35dp" />

        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="del"
            android:textColor="#FBFBFB"
            android:textSize="25dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="/"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="7"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="8"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="9"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="x"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="4"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="5"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="6"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:background="@android:drawable/progress_horizontal"
            android:text="-"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="1"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"

            android:text="2"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"

            android:text="3"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"

            android:text="+"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="0"
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="."
            android:textColor="#FBFBFB"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Ans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"

            android:text="Ans"
            android:textColor="#FBFBFB"
            android:textSize="20dp" />

        <Button
            android:id="@+id/eql"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:drawable/progress_horizontal"
            android:text="="
            android:textColor="#FBFBFB"
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>